<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_conversation"
    android:weightSum="125">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:layout_weight="5"
        android:id="@+id/btn_conversation_back"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="115"
    >
    <ListView
        android:id="@+id/listViewConversation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="100">

       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="90"
           android:id="@+id/et_conversation_message"
           />

        <Button
            android:id="@+id/btn_conversation_send"
            android:layout_width="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:layout_weight="5"
            android:text="Send" />

    </LinearLayout>

</LinearLayout>
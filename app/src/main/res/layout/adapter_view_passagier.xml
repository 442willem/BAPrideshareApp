<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textStyle="bold"
        android:id="@+id/tv_passagier_name"
        android:text="name"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textStyle="bold"
        android:id="@+id/tv_passagier_pickup"
        android:text="ophalen"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/tv_passagier_numberOfPlaces"
        android:textStyle="bold"
        android:text="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/tv_passagier_accepted"
        android:textStyle="bold"
        android:text="accep"/>



</LinearLayout>